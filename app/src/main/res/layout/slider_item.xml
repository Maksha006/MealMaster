<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="8dp"
    android:layout_margin="8dp"
    android:id="@+id/random_list_container">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/DishName_title"
            android:text="Dish Name"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:textStyle="bold"
            android:textColor="@color/butter"
            android:textSize="22dp"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/image_food"
            android:layout_width="387dp"
            android:layout_height="200dp"
            android:layout_below="@+id/DishName_title"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_like"
            android:layout_width="38dp"
            android:layout_height="35dp"
            android:layout_marginStart="335dp"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:src="@drawable/ic_save_black"
            app:backgroundTint="@color/white"
            app:fabSize="mini" />

        <Button
            android:id="@+id/btn_vedette"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_above="@+id/image_food"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="-131dp"
            android:src="@drawable/ic_vedette"></Button>

    </RelativeLayout>

</androidx.cardview.widget.CardView>